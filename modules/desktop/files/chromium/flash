[ ! -d /opt/google/chrome-beta/PepperFlash ] || {
  FLASH_VERSION="$(sed -n 's/ *"version": "\([0-9.]*\)",/\1/p' \
	/opt/google/chrome-beta/PepperFlash/manifest.json)"
  CHROMIUM_FLAGS="$CHROMIUM_FLAGS --ppapi-flash-path=/opt/google/chrome-beta/PepperFlash/libpepflashplayer.so --ppapi-flash-version=$FLASH_VERSION"
}

